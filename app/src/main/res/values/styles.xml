<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@color/colorHeaderText</item>
        <item name="android:textColorPrimary">@color/colorGrayBasic</item>
        <item name="android:textColorSecondary">@color/colorHeaderText</item>
        <item name="fontFamily">@font/text_fonts</item>
        <item name="android:textSize">16sp</item>



    </style>

    <style name="seat_button" parent="Widget.AppCompat.Button.Small" >
        <item name="android:background">@drawable/seat_btn</item>
       <item name="android:checkboxStyle">@null</item>
        <item name="android:textSize">10sp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:minWidth">25dp</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:paddingStart">1dp</item>
        <item name="android:paddingEnd">1dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="app_button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorYellow</item>
        <item name="fontFamily">@font/dinpro_black</item>

    </style>

    <style name="tickets_rv_item" parent="Widget.MaterialComponents.TextView">
        <item name="color">@color/colorGrayBasic</item>
<!--        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>-->
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">?android:attr/listPreferredItemPaddingStart</item>
        <item name="android:paddingEnd">?android:attr/listPreferredItemPaddingEnd</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
    </style>



</resources>
