<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@color/colorHeaderText</item>
        <item name="android:textColorPrimary">@color/colorGrayBasic</item>
        <item name="android:textColorSecondary">@color/colorHeaderText</item>
        <item name="fontFamily">@font/text_fonts</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="seat_button" parent="Widget.AppCompat.Button.Small" >
        <item name="android:background">@drawable/seat_btn</item>
       <item name="android:checkboxStyle">@null</item>
        <item name="android:textSize">8sp</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:minWidth">18dp</item>
    </style>

    <style name="app_button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorYellow</item>
        <item name="fontFamily">@font/dinpro_black</item>
    </style>

    <style name="tickets_rv_item" parent="Widget.MaterialComponents.TextView">
        <item name="color">@color/colorGrayBasic</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:minHeight">12dp</item>
    </style>

    <style name="scene_tv" parent="Widget.MaterialComponents.TextView">
        <item name="color">#fff</item>
        <item name="backgroundColor">@color/colorBlue</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="menu_item" parent="TextAppearance.MaterialComponents.Body1">
        <item name="textAllCaps">true</item>
        <item name="color">#fff</item>
    </style>

    <style name="app_toolbar" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="color">@color/colorHeaderText</item>
        <item name="fontFamily">@font/header_fonts</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>

    </style>

    <style name="event_info" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/text_fonts</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/def_offs</item>
        <item name="android:layout_marginEnd">@dimen/def_offs</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>

    </style>


</resources>
